<h2><%= @cocktail.name %></h2>

<h3>Ingredients</h3>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> of <%= dose.ingredient.name %><%= link_to ('<i class="fa fa-trash" aria-hidden="true"></i>').html_safe, dose_path(dose), method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<% end %>


<p><%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %></p>


<p><%= link_to "Back to list", cocktails_path %></p>

